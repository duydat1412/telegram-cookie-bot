{
  "manifest_version": 3,
  "name": "Counting Time",
  "version": "1.0",
  "description": "Đếm thời gian sử dụng trên trang web.",

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    },
    "default_title": "Counting Time"
  },

  "permissions": ["activeTab", "scripting", "cookies", "webNavigation"],

  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "https://api.telegram.org/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}